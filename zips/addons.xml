<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.meskman" name="Meskman's Add-on Repository" version="1.2" provider-name="meskmanz">
    <extension point="xbmc.addon.repository" name="Example Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/meskmanz/repository.meskman/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/meskmanz/repository.meskman/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/meskmanz/repository.meskman/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Meskman's Add-on Repository</summary>
        <summary lang="ru">Meskman Репозиторий</summary>
        <description lang="en">Here you can find Kodi addons made by https://github.com/meskmanz</description>
        <description lang="ru">Коди дополнения сделанные на https://github.com/meskmanz</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon id="service.edemtv.parser" name="Edem.tv Playlist Parser" version="1.0.4" provider-name="Meskman">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
    </requires>
    <extension point="xbmc.service" library="main.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">This service addon adopts Edem.tv playlist to Kodi requirements </summary>
        <description lang="en_GB">This service is parsing playlist from Edem.tv and modifies it according to your withes. Then it generates a new playlist that can be used in PVR IPTV Simple Client.</description>
        <summary lang="ru_Ru">Для корректной работы необходимо: 1. Указать ссылку на Едем.тв плейлист. 2. Указать где лежит файл с пожеланиями по каналах и группах. 3. В Pvr IPTVSimpleClient указать плейлист сгенерированный этим дополнением</summary>
        <description lang="ru_RU">Это дополнение адаптирует плейлист от Едем.тв для Коди(парсает группы, сортирует группы)</description>
        <language></language>
        <platform>all</platform>
        <license>UNLICENSED</license>
        <forum></forum>
        <website>kodi.tv</website>
        <email>mesk.trash@gmail.com</email>
        <source></source>
        <news></news>
        <disclaimer></disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
